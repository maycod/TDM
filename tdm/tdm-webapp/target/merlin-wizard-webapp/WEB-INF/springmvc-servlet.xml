  </bean>
  
  <bean id="dao.PlazasDao" class="com.seven_eleven.merlin.dao.impl.PlazasDao">
        <property name="dataSource" ref="dataSource" />        
  </bean>

  <bean id="dao.MercadosDao" class="com.seven_eleven.merlin.dao.impl.MercadosDao">
        <property name="dataSource" ref="dataSource" />        
  </bean>
  
